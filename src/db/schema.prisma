datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "./generated"
}

model Note {
  id        String      @id @default(uuid())
  text      String
  author    User        @relation(fields: [authorId], references: [id])  
  authorId  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt @default(now())
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  name      String?     
  notes     Note[]
}